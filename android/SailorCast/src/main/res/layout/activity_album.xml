<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.crixmod.sailorcast.ui.AlbumActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        tools:context="com.crixmod.sailorcast.ui.AlbumActivity">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/album_topinfo_container"
            android:background="@drawable/bottom_border"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/album_image"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/album_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <TextView
                    android:id="@+id/album_director"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/album_main_actor"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:text="@string/toggle_button_display_title"
                    android:id="@+id/toggle_playcontrol"
                    />
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:text="@string/toggle_button_order"
                    android:id="@+id/toggle_order"
                    />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">

            <!--   下面是播放控件控件 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/album_play_control_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.crixmod.sailorcast.uiutils.SlidingTabLayout
                    android:id="@+id/sliding_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                />

                <android.support.v4.view.ViewPager
                    android:id="@+id/album_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                />
            </LinearLayout>


            <!--   下面是Description控件 -->
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:visibility="gone"
                android:id="@+id/album_desc_container"
                android:layout_width="fill_parent" android:layout_height="fill_parent">
                <RelativeLayout android:orientation="vertical"
                    android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:padding="2dp">
                    <!-- Contents will go here..-->
                    <TextView
                        android:id="@+id/album_desc"
                        android:paddingTop="30dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>
                <Button android:layout_alignParentRight="true" android:text="X"
                    android:textColor="#FFF" android:background="@drawable/round_button_close"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp" android:layout_height="25dp"
                    android:layout_width="25dp" android:textSize="12sp" android:textStyle="bold"
                    android:onClick="closeAlbumDesc"
                />
            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
